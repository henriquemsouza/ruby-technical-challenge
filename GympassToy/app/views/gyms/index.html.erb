<div style="margin-left: 100px;">
<p id="notice"><%= notice %></p>

<h1>Gyms</h1>

<table>
  <thead>
    <tr>
      <th>Gym name</th>
      <th>Address</th>
      <th>Open time</th>
      <th>Close time</th>
      <th>Gym manager</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gyms.each do |gym| %>
      <tr>
        <td><%= gym.gym_name %></td>
        <td><%= gym.address %></td>
        <td><%= gym.open_time %></td>
        <td><%= gym.close_time %></td>
        <td><%= gym.gym_manager %></td>
        <td><%= link_to 'Show', gym %></td>
        <td><%= link_to 'Edit', edit_gym_path(gym) %></td>
        <td><%= link_to 'Destroy', gym, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gym', new_gym_path %>
</div>
